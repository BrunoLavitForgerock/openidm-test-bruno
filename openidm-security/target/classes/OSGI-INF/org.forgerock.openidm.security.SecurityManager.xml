<?xml version="1.0" encoding="UTF-8"?><components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
    <scr:component immediate="true" name="org.forgerock.openidm.security" configuration-policy="ignore" activate="activate" deactivate="deactivate">
        <implementation class="org.forgerock.openidm.security.SecurityManager"/>
        <service servicefactory="false">
            <provide interface="org.forgerock.json.resource.RequestHandler"/>
            <provide interface="org.forgerock.openidm.security.KeyStoreManager"/>
        </service>
        <property name="service.vendor" value="ForgeRock AS."/>
        <property name="service.description" value="Security Management Service"/>
        <property name="openidm.router.prefix" value="/security/*"/>
        <property name="service.pid" value="org.forgerock.openidm.security"/>
        <reference name="repoService" interface="org.forgerock.openidm.repo.RepositoryService" cardinality="1..1" policy="static" bind="bindRepoService" unbind="unbindRepoService"/>
        <reference name="cryptoUpdateService" interface="org.forgerock.openidm.crypto.factory.CryptoUpdateService" cardinality="1..1" policy="static" bind="bindCryptoUpdateService" unbind="unbindCryptoUpdateService"/>
    </scr:component>
</components>
